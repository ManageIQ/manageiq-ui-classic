- url = url_for_only_path(:action => 'dialog_form_field_changed', :id => (@record.id || 'new'))
%h3
  = _('Box Information')
.form-horizontal
  .form-group
    %label.col-md-2.control-label
      = _('Label')
    .col-md-8
      = text_field_tag("group_label",
                        @edit[:group_label],
                        :maxlength         => ViewHelper::MAX_NAME_LEN,
                        :class => "form-control",
                        "data-miq_observe" => {:url => url}.to_json)
      = javascript_tag(javascript_focus('group_label'))
  .form-group
    %label.col-md-2.control-label
      = _('Description')
    .col-md-8
      = text_field_tag("group_description",
                        @edit[:group_description],
                        :maxlength         => 100,
                        :class => "form-control",
                        "data-miq_observe" => {:url => url}.to_json)
