-# if dialogs is selected
#sample_form_buttons_div
  - if @record.buttons
    %table{:width => "100%"}
      %tr
        %td{:align => "right"}
          #buttons
            - @record.buttons.split(',').each do |b|
              = button_tag("#{b.strip}", :class => "btn btn-default")
