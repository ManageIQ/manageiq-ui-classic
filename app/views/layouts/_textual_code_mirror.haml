/ begin: app/views/layouts/_textual_code_mirror.haml
.row
  .col-md-12.col-lg-12
    %hr
      %h3= _("#{label}")
      = text_area(text_area_id, "data",
          :value => "#{value}",
          :size => "90x20",
          :disabled => true,
          :style => "display:none;")
      -# Create a MyCodeMirror editor for the text area
      = render(:partial => "/layouts/my_code_mirror",
        :locals => {:text_area_id => "#{text_area_id}_data",
          :mode => "#{mode}",
          :line_numbers => true,
          :read_only => true})

/ end: app/views/layouts/_textual_code_mirror.haml
