/ begin: app/views/layouts/_breadcrumbs.html.haml
- if @breadcrumbs && @breadcrumbs.length > 1
  %ol.breadcrumb
    - @breadcrumbs[0...-1].each do |breadcrumbs|
      %li
        %a{:href => breadcrumbs[:url], :onclick => "return miqCheckForChanges()"}
          = h(breadcrumbs[:name])
    %li.active
      = @title
- elsif @layout.end_with?("_topology")
- else
  %br
/ end: app/views/layouts/_breadcrumbs.html.haml
