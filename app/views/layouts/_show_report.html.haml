/ begin: app/views/layouts/_show_report.html.haml
- if @report.nil?
  %h3= _("Choose a Report to view.")
- else
  %fieldset
    %h3= @report.title
    = render :partial => "layouts/flash_msg"
    = render :partial => "shared/report_chart_and_html", :locals => {:html => @html, :chart => @render_chart, :report => @report}
/ end: app/views/layouts/_show_report.html.haml
