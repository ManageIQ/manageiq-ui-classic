#inventory_group_form_tabs
  %ul.nav.nav-tabs{'role' => 'tablist'}
    = miq_tab_header('summary', @sb[:active_tab]) do
      = _("Summary")
    = miq_tab_header('configured_systems', @sb[:active_tab]) do
      = _("Configured Systems")
  .tab-content
    = miq_tab_content('configured_systems', @sb[:active_tab]) do
      - if @sb[:active_tab] == "configured_systems"
        = render :partial => "layouts/x_gtl"
        :javascript
          ManageIQ.afterOnload = {action: () => showSearchBox()}
    = miq_tab_content('summary', @sb[:active_tab]) do
      - if @sb[:active_tab] == "summary"
        = render :partial => "main_inventory_group"

:javascript
  miq_tabs_init('#inventory_group_form_tabs', '/automation_manager/change_tab');
