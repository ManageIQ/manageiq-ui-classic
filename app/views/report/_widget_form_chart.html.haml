/ begin: app/views/report/_widget_form_chart.html.haml
- url = url_for_only_path(:action => 'widget_form_field_changed', :id => (@widget.id || "new"))
%h3
  = _('Chart Report')
.form-horizontal
  .form-group
    %label.col-md-2.control-label
      - if @edit[:read_only]
        *
      = _('Filter')
    .col-md-8
      = select_tag("repfilter_typ", options_for_select(["<Choose>"] + @reps, @edit[:new][:repfilter]),
        :multiple              => false,
        :class                 => "selectpicker",
        :disabled              => @edit[:read_only])
      :javascript
        miqInitSelectPicker();
        miqSelectPickerEvent('repfilter_typ', '#{url}', {beforeSend: true, complete: true});
%hr
/ end: app/views/report/_widget_form_chart.html.haml
