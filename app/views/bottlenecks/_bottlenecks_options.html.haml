- url = url_for_only_path :action => 'tl_chooser'
#tl_options_div
  %h3
    = _('Options')
  .form-horizontal
    .form-group
      %label.control-label.col-md-2
        = _('Event Groups')
      .col-md-10
        = select_tag("tl_#{typ}_fl_grp1",
          options_for_select([["<#{_('ALL')}> ", ""]] + @sb[:groups].sort, @sb[:tl_options][:filter1]),
          "class" => "selectpicker",
          "data-miq_sparkle_on"  => true,
          "data-miq_sparkle_off" => true)
        :javascript
          miqInitSelectPicker();
          miqSelectPickerEvent("tl_#{typ}_fl_grp1", "#{url}");
    - unless %w(s h).include?(x_node.split("-").last.split("_").first) || x_node.starts_with?('ds')
      .form-group
        %label.control-label.col-md-2
          = _('Show Host Events')
        .col-md-10
          = check_box_tag("tl_#{typ}_hosts", "1", @sb[:tl_options][:hosts],
            "data-miq_sparkle_on"       => true,
            "data-miq_sparkle_off"      => true,
            "data-miq_observe_checkbox" => {:url => url}.to_json)
    .form-group
      %label.control-label.col-md-2
        = _('Time Zone')
      .col-md-10
        = select_tag("tl_#{typ}_tz",
          options_for_select(ViewHelper::ALL_TIMEZONES,
          @sb[:tl_options][:tz]),
          "data-live-search" => "true",
          "class" => "selectpicker",
          "data-miq_sparkle_on"  => true,
          "data-miq_sparkle_off" => true)
        :javascript
          miqInitSelectPicker();
          miqSelectPickerEvent("tl_#{typ}_tz", "#{url}");
