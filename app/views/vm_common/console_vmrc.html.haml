= render :partial => 'layouts/doctype'
%html{:lang => I18n.locale.to_s.sub('-', '_')}
  %head
    = miq_favicon_link_tag
    = javascript_essential_dependencies
    = javascript_pack_tag('manageiq-ui-classic/remote_consoles/vmrc.js')
    :javascript
      // INITIALIZE
      $(document).ready(function(){
        window.location.href = "#{j(remote_url.to_s)}";
        setTimeout(function () { window.close(); }, 8000);
      });

  %body
    = _('Starting the VMRC application ...')
