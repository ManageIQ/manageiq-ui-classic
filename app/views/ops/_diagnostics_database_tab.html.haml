%diagnostics-database-form-component
:javascript
   ManageIQ.angular.app.value('submitUrl', "/#{controller_name}/db_backup/");
   ManageIQ.angular.app.value('dbBackupFormFieldChanged', "/#{controller_name}/db_backup_form_field_changed/");

   ManageIQ.angular.app.value('diagnosticsDatabaseId', '#{@id}');
   ManageIQ.angular.app.value('sb', #{@sb[:active_tab].to_json});
   ManageIQ.angular.app.value('database_display_name', '#{@database_display_name}');
   ManageIQ.angular.app.value('database_details', #{@database_details.to_json});
   ManageIQ.angular.app.value('backup_schedules', #{@backup_schedules.invert.sort_by { |name, _id| name }.to_json});
   ManageIQ.angular.app.value('database_backup_options_for_select', #{@database_backup_options_for_select.to_json});
   miq_bootstrap('diagnostics-database-form-component')

