/ begin: app/views/ops/_diagnostics_roles_servers_tab.html.haml
- if @sb[:active_tab] == "diagnostics_roles_servers"
  = render(:partial => "layouts/flash_msg")
  - if @server_tree
    .row
      .col-md-12.col-lg-6
        = render :partial => "zone_tree"
      .col-md-12.col-lg-6
        = render :partial => "selected"
  - else
    = render :partial => 'layouts/info_msg', :locals => {:message => _("No Servers found.")}
