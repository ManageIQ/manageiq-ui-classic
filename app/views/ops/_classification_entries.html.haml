#classification_entries_div
  %h3= "#{@cat.description} Entries"
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= _("Name")
        %th= _("Description")
        %th.action-cell= _("Actions")
    %tbody
      - if entry != nil && entry == "new"
        = render :partial => "classification_entry", :locals => {:entry => "new", :edit => true}
      - else
        = render :partial => "classification_entry", :locals => {:entry => "new", :edit => false}
      - @cat.entries.sort_by(&:name).each do |e|
        - if entry != nil && entry != "new" && entry.id == e.id
          = render :partial => "classification_entry", :locals => {:entry => e, :edit => true}
        - else
          = render :partial => "classification_entry", :locals => {:entry => e, :edit => false}
    %tfoot
      %tr
        %td{:colspan => "40"}
