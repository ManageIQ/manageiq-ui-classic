- if @sb[:active_tab] == "diagnostics_zones"
  - if @zones
    = render :partial => "layouts/flash_msg"
    - if @zones.empty?
      = render :partial => 'layouts/info_msg', :locals => {:message => _("No Zones found.")}
    - else
      %table.table.table-striped.table-bordered.table-hover
        %tbody
          - @zones.sort_by(&:name).each do |z|
            %tr{:onclick => "miqTreeActivateNode('diagnostics_tree', 'z-#{z.id}')", :title => _("View this Zone")}
              %td.table-view-pf-select
                %i.pficon.pficon-zone
              %td
                - if my_zone_name == z.name
                  %b
                    = h(ui_lookup(:model => z.class.to_s))
                    = ": #{h(z.description)}"
                    = _("(current)")
                - else
                  = h(ui_lookup(:model => z.class.to_s))
                  = ": #{h(z.description)}"

  %div{:style => "padding-bottom: 20px"}
