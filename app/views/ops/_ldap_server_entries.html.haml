/ begin: app/views/ops/_ldap_server_entries.html.haml
#ldap_server_entries_div
  = render :partial => "layouts/flash_msg"
  %fieldset
    %h3= _("LDAP Servers")
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th.table-view-pf-select
          %th= _("Hostname")
          %th= _("Mode")
          %th= _("Port")
          %th
      %tbody
        - edit_flag = !(entry.nil?) && entry == "new"
        = render :partial => "ldap_server_entry",
                 :locals  => {:entry     => "new",
                              :entry_idx => nil,
                              :edit      => edit_flag,
                              :domain_id => domain_id}
        - @edit[:new][:ldap_servers].each_with_index do |e, i|
          - edit_flag = !(entry.nil?) && entry != "new" && entry.to_i == i
          = render :partial => "ldap_server_entry",
                   :locals  => {:entry     => e,
                                :entry_idx => i,
                                :edit      => edit_flag,
                                :domain_id => domain_id}
      %tfoot
        %tr
          %td{:colspan => "40"}
/ end: app/views/ops/_ldap_server_entries.html.haml
