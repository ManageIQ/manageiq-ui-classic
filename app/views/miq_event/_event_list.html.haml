#event_list_div
  - if @events
    - if @events.empty?
      - if @search_text.empty?
        - msg = _("No Events are defined")
      - else
        - msg = _("No Events are defined that match the entered search string '%s'") % @search_text
      = render 'layouts/info_msg', :message => msg
    - else
      %table.table.table-striped.table-bordered.table-hover
        %tbody
          - @events.each do |e|
            %tr{:title => _("View this Event"),
              :onclick => "miqTreeActivateNode('event_tree', 'ev-#{e.id}');"}
              %td.table-view-pf-select
                %i{:class => e.decorate.try(:fonticon)}
              %td
                = e.description
