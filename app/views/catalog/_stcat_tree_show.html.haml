.maincontent
  = render :partial => "layouts/flash_msg"
  .form-horizontal
    .form-group
      %label.col-md-2.control-label
        = _('Name')
      .col-md-8
        %p.form-control-static
          = @record.name
    .form-group
      %label.col-md-2.control-label
        = _('Description')
      .col-md-8
        %p.form-control-static= @record.description
  - if @record_service_templates.empty?
    = render :partial => 'layouts/info_msg', :locals => {:message => _("No Catalog Items found.")}
  - else
    = react('CatalogItemsTable', {:initialData => @record_service_templates.sort_by { |a| a.name.downcase }, :record => @record})
