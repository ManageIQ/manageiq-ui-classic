%hr
  %h3
    = _('Buttons')
  %table.table.table-bordered.table-hover.table-striped
    %thead
      %th.table-view-pf-select
      %th
        = _('Text')
      %th
        = _('Hover Text')
    %tbody
      - buttons.each do |obj|
        %tr
          %td.table-view-pf-select
            %i{:class => obj.options[:button_icon], :style => obj.options.key?(:button_color) ? "color: #{obj.options[:button_color]};" : nil}
          %td
            = obj[:name]
          %td
            = obj[:description]
