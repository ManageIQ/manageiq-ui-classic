/ begin: app/views/pxe/_iso_img_form.html.haml
- url = url_for_only_path(:action => 'iso_img_form_field_changed', :id => (@img.id || "new"))
#form_div
  = render :partial => "layouts/flash_msg"
  %h3
    = _('Basic Information')
  .form-horizontal
    .form-group
      %label.col-md-2.control-label
        = _('Type')
      .col-md-8
        - img_types = [["<#{_('Unknown')}>", nil]] + @edit[:pxe_image_types]
        = select_tag("image_typ",
                      options_for_select(img_types, @edit[:new][:img_type]),
                      :class    => "selectpicker")
      :javascript
         miqInitSelectPicker();
         miqSelectPickerEvent("image_typ", "#{url}")
/ end: app/views/pxe/_iso_img_form.html.haml
