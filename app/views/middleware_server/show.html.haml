- if @showtype == "performance"
  = render(:partial => "layouts/performance_async")
- elsif @showtype == "compliance_history"
  = render :partial => "shared/views/compliance_history"
- elsif @showtype == 'main'
  = render :partial => "layouts/textual_groups_generic"
  = render :partial => 'dr_reports_list'

- @angular_form = true
%ng-form#mw_server_form{"name"          => "mw_server_form",
                        "ng-controller" => "mwServerController",
                        "novalidate"    => "true"}
  = render :partial => 'ops_params'

:javascript
  miq_bootstrap('#mw_server_form');
