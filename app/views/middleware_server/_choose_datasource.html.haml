/ begin: app/views/middleware_server/_choose_datasource.html.haml
.mw_ds_add_choose{"ng-show" => "vm.dsModel.step == 'CHOOSE_DS'"}
  %h3
    = _("Choose Datasource:")

  %ng-form.form-horizontal#form_ds_choose{"name" => "dsChooseForm"}
    .form-group
      %label.col-md-4.control-label{:for => "xa_ds_cb"}
        = _("XA Datasource:")
      .col-md-8
        %input#xa_ds_cb{:type             => "checkbox",
                        "bs-switch"       => "",
                        "switch-on-text"  => _("Yes"),
                        "switch-off-text" => _("No"),
                        "switch-change"   => "vm.onXaChange()",
                        "ng-model"        => "vm.chooseDsModel.xaDatasource"}

    .form-group
      %label.col-md-4.control-label{:for => "choose_datasource_input"}
        = _("Datasource:")
      .col-md-8
        %select.form-control#chooose_datasource_input{"name"        => "choose_datasource_input",
                                                      "ng-model"    => "vm.chooseDsModel.selectedDatasource",
                                                      "ng-options"  => "c.label for c in vm.chooseDsModel.datasources track by c.id",
                                                      "ng-required" => "true"}
      .col-sm-2
      .col-sm-10
        %p.ng-error-messages{"ng-show" => "dsChooseForm.chooose_datasource_input.$error.required"}
          = _("Required")

  .modal-footer
    %button.btn.btn-default.dialog-cancel-button{:type      => "button",
                                                 "alt"      => (t = _("Cancel")),
                                                 "title"    => t,
                                                 "ng-click" => "vm.reset()"}
      = t
    %button.btn.btn-primary{:type         => "button",
                            "alt"         => (t = _("Next")),
                            "title"       => t,
                            "ng-click"    => "vm.addDatasourceChooseNext()",
                            "ng-disabled" => "dsChooseForm.$invalid"}
      = t
/ end: app/views/middleware_server/_choose_datasource.html.haml
