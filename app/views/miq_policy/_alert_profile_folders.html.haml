/ begin: app/views/miq_policy/_alert_profile_folders.html.haml
#alert_profile_folders_div
  - if @ap_folders
    = render :partial => "layouts/flash_msg"
    %table.table.table-striped.table-bordered.table-hover
      %tbody
        - @ap_folders.each do |f|
          %tr{:title => _("Open Folder"),
            :onclick => "miqTreeActivateNode('alert_profile_tree', 'xx-#{f.last}');"}
            %td.table-view-pf-select
              %img{:src => image_path("100/#{f.last.underscore.downcase}.png")}
            %td
              = f.first
              &nbsp;
              = _('Alert Profiles')
/ end: app/views/miq_policy/_alert_profile_folders.html.haml
