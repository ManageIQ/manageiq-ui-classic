.col-sm-12
  .ad-hoc-toolbar{"pf-toolbar" => "", "id" => "filters-selector", "config" => "dash.toolbarConfig"}
    %actions
      %select.selectpicker.tenants-selector{"pf-select"              => "",
                                            "id"                     => "tenant-slector",
                                            "ng-show"                => "dash.dbName === \"Hawkular\"",
                                            "ng-options"             => "o.label for o in dash.tenantList",
                                            "ng-model"               => "dash.tenant",
                                            "ng-change"              => "dash.refreshTenant()",
                                            "data-live-search"       => "true",
                                            "data-actions-box"       => "true",
                                            "data-select-all-text"   => _("Select All"),
                                            "data-deselect-all-text" => _("Deselect All")}
      %button.btn.btn-primary{"type"          => "button",
                              "ng-click"      => "dash.viewGraph()",
                              "ng-disabled"   => "!dash.itemSelected",
                              "ng-attr-title" => _("Select One or More Metrics to Chart")}
        = _("View Chart")
