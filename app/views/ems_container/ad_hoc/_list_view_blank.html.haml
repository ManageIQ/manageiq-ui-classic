.col-sm-12
  .blank-slate-pf{"ng-if" => "!dash.applied || dash.loadingMetrics",
                  "ng-class" => "{'no-filters': dash.filterConfig.fields.length === 0,
                                  'loading': !dash.tagsLoaded}"}
    .spinner.spinner-lg.loading{"ng-if" => "!dash.tagsLoaded || dash.loadingMetrics"}
    .blank-slate-pf-icon
      %span.fa.fa-info-circle
    %h1
      = _("Metrics")
    %p{"ng-if" => "!dash.tagsLoaded"}
      = _("Loading available tags")
    %p{"ng-if" => "dash.tagsLoaded && !dash.loadingMetrics"}
      = _("Add tags to view available metrics")
    %p{"ng-if" => "dash.tagsLoaded && dash.loadingMetrics"}
      = _("Loading metrics")
