#main_div
  - if %w(hosts).include?(@display)
    = render :partial => "layouts/x_gtl", :locals => {:action_url => "show/#{@switch.id}"}
  - else
    - case @showtype
      - when "details"
        = render :partial => "layouts/x_gtl", :locals => {:action_url => @lastaction}
      - when "main"
        = render :partial => "layouts/textual_groups_generic"
      - else
        = render :partial => @showtype
