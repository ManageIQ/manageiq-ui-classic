/ begin: app/views/shared/_compare_header_expanded.html.haml
- if base
  %b{:title => _("%{name} is the base") % {:name => h[:name]}}
    = h[:name]
    (base)
- else
  - url = "/#{controller_name}/compare_choose_base/#{h["id"]}"
  %a{:title => _("Make %{name} the base") % {:name => h[:name]}, :onclick => "miqJqueryRequest('#{url}', {beforeSend: true, complete: true});", :href => '#'}
    = h[:name]
%br
%br
.quadicon_grid
  = render_quadicon(@sb[:compare_db].constantize.find(vm_id), :mode => "icon", :db => @sb[:compare_db])
/ end: app/views/shared/_compare_header_expanded.html.haml
