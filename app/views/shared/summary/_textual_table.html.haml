/ begin: app/views/shared/summary/_textual_table.html.haml
%table.table.table-bordered.table-striped.table-summary-screen
  %thead
    %tr
      %th{:colspan => labels.count, :align => "left"}
        = title
  - labels.each do |label|
    %td
      %strong
        = label
  - rows.each do |row|
    %tr
      - row.each do |value|
        %td
          = value
/ end: app/views/shared/summary/_textual_table.html.haml
