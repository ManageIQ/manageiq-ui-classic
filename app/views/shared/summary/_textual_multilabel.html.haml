/ begin: app/views/shared/summary/_textual_multilabel.html.haml
- if values.present?
  %table.table.table-bordered.table-striped.table-summary-screen{:class => additional_table_class}
    %thead
      %tr
        %th{:colspan => labels.count, :align => "left"}
          = title
    - labels.each do |label|
      %td
        %strong
          - if (label.kind_of? Hash) && label[:sortable]
            .pull-left
              = label[:value]
            .pull-right
              %i{:class => label[:sortable] == :asc ? "fa fa-sort-asc" : "fa fa-sort-desc"}
          - else
            = label
    - values.each do |item|
      %tr
        - item.each do |value|
          %td
            - if (value.kind_of? Hash) && value[:expandable]
              .pull-left.expand
                = value[:value]
              .pull-right
            - else
              = value
/ end: app/views/shared/summary/_textual_multilabel.html.haml
